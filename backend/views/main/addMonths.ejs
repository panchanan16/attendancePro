<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="/output.css">
    <link rel="stylesheet" href="/css/addmon.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Document</title>
</head>

<body>
    <main class="flex w-full">
        <%- include('../sub/navbar') %>
        <section class="w-full">
            <div class="flex justify-between items-center mx-10 mt-5">
                <div class="flex items-center">
                    <div>
                        <input class="p-3 border-2 border-[#2254ee] rounded-lg w-[20rem]" type="text" name="" id=""
                        placeholder="search for subjects..">
                    </div>
                </div>
                <div onclick="finalCreateAttendanceSheet()">
                    <a class="hover:bg-[#c2d9ff] flex items-center gap-2 p-3 border-2 bg-[#2254ee] text-white font-bold rounded-lg w-[8rem]">
                        <span class="material-symbols-outlined text-white">person_add</span>Submit
                    </a>
                </div>
            </div>

            <!-- months name list -->
            <div class="mt-10 ml-10">
                <div><span class="text-2xl font-bold">Months List</span></div>
                <div class="flex flex-col gap-5 mt-10" id="month-list">
                    <% ['Jan', 'Feb', 'Mar', 'Jun', 'Jul', 'Aug'].forEach((mon)=>{ %>
                        <div class="flex items-center w-[10rem] justify-between px-5 rounded-lg bg-[#dfefff] p-3">
                            <div class="text-lg font-semibold text-[#044f88]">
                                <%= mon %>
                            </div>
                            <div>
                                <input data-mon="<%= mon %>" class="h-[1rem] inline-block w-[1rem] border-2" type="checkbox" name="" id="month-name">
                            </div>
                        </div>
                    <% }) %>

                    
                </div>
            </div>
        </section>
    </main>

    
    <script src="/js/module/module.js"></script>
    <script src="/js/addMon.js"></script>
</body>

</html>