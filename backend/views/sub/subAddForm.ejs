<div id="add-sub" class="p-10 hidden flex-col justify-center items-center bg-white w-[39%] rounded-lg">
    <button onclick="closeOverlay('settings-overlay', 'add-sub')" class="bg-red-100 text-red-600 self-end p-2 rounded-xl flex items-center hover:bg-red-200">
        <span class="material-symbols-outlined inline-block font-bold">close</span>
    </button>

    <form id="sub-add-form" class="flex flex-col gap-10 w-full mt-5">   
        <div>
            <input class="border-2 border-[#1a40db] p-3  w-[98%] rounded-lg" type="text" name="subject" id="" placeholder="Enter Subject Name">
        </div>
        <div>
            <select name="department" class="bg-[#dae8ff] text-[#1a40db] p-3 w-[98%] rounded-lg font-semibold">
                <option value="">Select department</option>
                <% sendData.currentSession?.forEach((dep)=> { %>
                    <option value="<%= dep.department %>"><%= dep.department %></option>
                <% }) %> 
            </select>
        </div>
        <div>
            <select name="sem" class="bg-[#dae8ff] text-[#1a40db] p-3 w-[98%] rounded-lg font-semibold">
                <option value="">Select semester</option>
                <option value="1st">1st</option>
                <option value="2nd">2nd</option>
                <option value="3rd">3rd</option>
            </select>
        </div>
      
        <div>
            <button onclick="addOrUpdateDepartment(event, 'apiv1/add-subj', this, 'sub-add-form')" class="bg-[#2254ee] p-3 px-8 rounded-xl font-bold text-white hover:bg-blue-300">
                Submit
            </button>
        </div>
    </form>
</div>